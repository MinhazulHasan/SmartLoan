@model IEnumerable<MemberInfo>
@{
    ViewData["Title"] = "AllMembers";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="row py-2">
    <div class="col-6">
        <h3 class="text-primary">Member List</h3>
    </div>
    <div class="col-6 text-end">
        <a asp-action="AddMember" asp-controller="Member" class="btn btn-primary" asp-route-id="0"> <i class="bi bi-plus-circle"></i> Create Member</a>
        <a asp-action="AddMultipleMembersInGroup" asp-controller="Member" class="btn btn-primary"> <i class="bi bi-bookmark-plus-fill"></i> Add Member To Group</a>
    </div>
</div>

<div class="table-responsive">
    <table class="table table-striped table-hover pt-2 align-middle" id="allMembers">
        <thead>
            <tr class="table-primary text-center">
                <th>Name</th>
                <th>Father's Name</th>
                <th>Mother's Name</th>
                <th>NID Num</th>
                <th>Birthdate</th>
                <th>Mobile Num</th>
                <th>View Details</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var member in Model)
            {
                <tr class="text-center">
                    <td>@member.Name</td>
                    <td>@member.FatherName</td>
                    <td>@member.MotherName</td>
                    <td>@member.Nid</td>
                    <td>@member.BirthDate.Value.ToShortDateString()</td>
                    <td>@member.MobileNumber</td>
                    <td>
                        <a asp-route-id="@member.Id" asp-action="SingleMemberDetails" asp-controller="Member" class="anchor-link bi bi-view-list"> Details</a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>


@section Scripts
{
    <script type="text/javascript">
        //var js = jQuery.noConflict(true);
        $(document).ready(function () {
            $('#allMembers').DataTable();
        });
    </script>
}
